<document xmlns="http://schemas.twitter.com/cards/4.0">
    <fields>
        <text name="title">
            <sources>
                <metaTag>twitter:text:title</metaTag>
            </sources>
            <constraints maxLength="70" />
        </text>
    </fields>
    <component>
        <name>title</name>
        <requiredFields>
            <field>title</field>
        </requiredFields>
        <styles>
            <style name="title">
                <width>fill</width>
                <margin>2,2,2,0</margin>
                <color>#292f33</color>
                <fontSize>16</fontSize>
                <maxLines>2</maxLines>
                <overflow>ellipsis</overflow>
                <lineHeight>1.0</lineHeight>
                <fontBold>true</fontBold>
            </style>
            <style name="title" devices="iPhone,iPad">
                <fontName>HelveticaNeue</fontName>
            </style>
            <style name="title" devices="Android">
                <lineHeight>0.82</lineHeight>
            </style>
        </styles>
        <container width="fill">
            <text class="title">{{title}}</text>
        </container>
    </component>
</document>